@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h4>Add a new machine</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.MachineName)
  @Html.TextBoxFor(model => model.MachineName)

  <p>@Html.LabelFor(model => model.InspectionDate)</p>
  <p>@Html.TextBoxFor(model => model.InspectionDate, new{@type="date"})</p>
  <input type="submit" value="Add a new machine"/>
}
<p>@Html.ActionLink("Show all machines", "Index")</p>