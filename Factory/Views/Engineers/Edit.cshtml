@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<div class="jumbotron">
  <h2>Edit Engineer Info</h2>

</div>

<h4>Edit this Engineer: @Html.DisplayFor(model => model.EngineerName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)

  <p>@Html.LabelFor(model => model.EngineerName)</p>
  <p>@Html.EditorFor(model =>model.EngineerName)</p>

  <p>@Html.LabelFor(model => model.IsActive)</p>
  <p>@Html.EditorFor(model =>model.IsActive)</p>

  <p>@Html.Label("Select Machine")</p>
  <p>@Html.DropDownList("MachineId")</p>

  <input type="submit" value="Save">
}

<p>@Html.ActionLink("Back to Engineers", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>